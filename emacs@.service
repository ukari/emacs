[Unit]
Description=Emacs: the text editor

[Service]
Type=forking
ExecStart=/usr/bin/env XMODIFIERS="@im=fcitx" /usr/bin/emacs --daemon
ExecStop=/usr/bin/emacsclient --eval "(progn (setq kill-emacs-hook 'nil) (kill-emacs))"
Restart=always
User=%i
WorkingDirectory=%h

[Install]
WantedBy=multi-user.target
